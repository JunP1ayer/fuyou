{
  "version": 2,
  "buildCommand": "",
  "outputDirectory": ".",
  "installCommand": "",
  "functions": {
    "api/openai-vision.js": {
      "maxDuration": 30
    },
    "api/gemini-vision.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/shiftboard-salary.html"
    },
    {
      "source": "/app",
      "destination": "/shiftboard-salary.html"
    },
    {
      "source": "/ai",
      "destination": "/shiftboard-salary.html"
    },
    {
      "source": "/latest",
      "destination": "/shiftboard-salary.html"
    },
    {
      "source": "/shift",
      "destination": "/shiftboard-salary.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}